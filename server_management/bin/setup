#!/bin/bash
set -e

# Import Create Direcory functions
source $PWD/create
source $PWD/install

# Default values for options
INSTALL_DOCKER=false
INSTALL_NODE=false
INSTALL_NGINX=false
INSTALL_MONGODB=false
MODIFY_DOCKER_NODE=false
MODIFY_DOCKER_REACT=false

# Usage information
function usage() {
	echo "Usage: $0 [-d|--docker] [-n|--nodejs] [-x|--nginx] [-m|--mongodb] [-dn|--docker_node] [-dr|--docker_react]"
	echo "Options:"
	echo "  -d, --docker  Install Docker"
	echo "  -n, --nodejs  Install Node.js"
	echo "  -x, --nginx   Install Nginx"
	echo "  -m, --mongodb Install MongoDB"
	echo "  -dn, --docker_node Copy Docker files and mondify"
	echo "  -dr, --docker_react Copy Docker files and mondify"
}

# Parse options
while [[ $# -gt 0 ]]; do
	key="$1"

	case $key in
	-d | --docker)
		INSTALL_DOCKER=true
		shift # past argument
		;;
	-n | --nodejs)
		INSTALL_NODE=true
		shift # past argument
		;;
	-x | --nginx)
		INSTALL_NGINX=true
		shift # past argument
		;;
	-m | --mongodb)
		INSTALL_MONGODB=true
		shift # past argument
		;;
	-dn | --docker_node)
		MODIFY_DOCKER_NODE=true
		shift # past argument
		;;
	-dr | --docker_react)
		MODIFY_DOCKER_REACT=true
		shift # past argument
		;;
	*)
		# unknown option
		echo "Invalid option: $key" 1>&2
		usage
		exit 1
		;;
	esac
done

# Check if no options are provided
if
	! $INSTALL_DOCKER && ! $INSTALL_NODE && ! $INSTALL_NGINX && ! $INSTALL_MONGODB && ! $MODIFY_DOCKER_NODE
then
	echo "At least one option is required."
	usage
	exit 1
fi

if $INSTALL_DOCKER; then
	install_docker
fi

if $INSTALL_NODE; then
	install_nodejs
fi

if $INSTALL_NGINX; then
	clone_nginx
	pushd /project/nginx
	./start.sh
fi

if $INSTALL_MONGODB; then
	clone_mongodb
fi

if $MODIFY_DOCKER_NODE; then
	cp -r ../data/docker/node/. ./
	current_path="$(basename $(pwd))"
	sed -i "s/project-name/$current_path/g" docker-compose.yml
fi

if $MODIFY_DOCKER_REACT; then
	cp -r ../data/docker/react/. ./
	current_path="$(basename $(pwd))"
	sed -i "s/project-name/$current_path/g" docker-compose.yml
fi

# Final message
echo "Setup complete."
