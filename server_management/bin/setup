#!/bin/bash
set -e

# Import Create Direcory functions
source $HOME/shellscripts/server_management/bin/create
source $HOME/shellscripts/server_management/bin/install

# Default values for options
INSTALL_DOCKER=false
INSTALL_NODE=false
INSTALL_NGINX=false
INSTALL_MONGODB=false

# Usage information
function usage() {
	echo "Usage: $0 [--docker] [--nodejs] [--nginx] [--mongodb]"
	echo "Options:"
	echo "  --docker  Install Docker"
	echo "  --nodejs  Install Node.js"
	echo "  --nginx   Install Nginx"
	echo "  --mongodb Install MongoDB"
}

# Parse options
while [[ $# -gt 0 ]]; do
	key="$1"

	case $key in
	--docker)
		INSTALL_DOCKER=true
		shift # past argument
		;;
	--nodejs)
		INSTALL_NODE=true
		shift # past argument
		;;
	--nginx)
		INSTALL_NGINX=true
		shift # past argument
		;;
	--mongodb)
		INSTALL_MONGODB=true
		shift # past argument
		;;
	*)
		# unknown option
		echo "Invalid option: $key" 1>&2
		usage
		exit 1
		;;
	esac
done

# Check if no options are provided
if ! $INSTALL_DOCKER && ! $INSTALL_NODE && ! $INSTALL_NPM; then
	echo "At least one option is required."
	usage
	exit 1
fi

if $INSTALL_DOCKER; then
	install_docker
fi

if $INSTALL_NODE; then
	install_nodejs
fi

if $INSTALL_NGINX; then
	clone_nginx
	pushd /project/nginx
	./start.sh
fi

if $INSTALL_MONGODB; then
	clone_mongodb
fi

# Final message
echo "Setup complete."
