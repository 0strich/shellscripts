#!/bin/bash
set -e

# Default values for options
MY_PATH=$(dirname $(readlink -f $0))
INSTALL_DOCKER=false
INSTALL_GO_LANG=false
INSTALL_NODE=false
INSTALL_NGINX=false
INSTALL_MONGODB=false
MODIFY_DOCKER_NODE=false
MODIFY_DOCKER_REACT=false

OPTIONS=(
	"INSTALL_DOCKER=false"
	"INSTALL_GO_LANG=false"
	"INSTALL_NODE=false"
	"INSTALL_NGINX=false"
	"INSTALL_MONGODB=false"
	"MODIFY_DOCKER_NODE=false"
	"MODIFY_DOCKER_REACT=false"
)

# Import Create Direcory functions
source $MY_PATH/create
source $MY_PATH/install

# Usagr information
function usage() {
	echo "Usage: $0 [-d|--docker] [-n|--nodejs] [-g|--golang] [-x|--nginx] [-m|--mongodb] [-dn|--docker_node] [-dr|--docker_react]"
	echo "Options:"
	echo "  -d, --docker  Install Docker"
	echo "  -g, --golang Install GoLang"
	echo "  -n, --nodejs  Install Node.js"
	echo "  -x, --nginx   Install Nginx"
	echo "  -m, --mongodb Install MongoDB"
	echo "  -dn, --docker_node Copy Docker files and mondify"
	echo "  -dr, --docker_react Copy Docker files and mondify"
}

function option_switch() {
	eval "$1"=true
	shift # past argument
}

# Parse options
while [[ $# -gt 0 ]]; do
	key="$1"

	case $key in
	-d | --docker)
		option_switch INSTALL_DOCKER
		;;
	-g | --golang)
		option_switch INSTALL_GO_LANG
		;;
	-n | --nodejs)
		option_switch INSTALL_NODE
		;;
	-x | --nginx)
		option_switch INSTALL_NGINX
		;;
	-m | --mongodb)
		option_switch INSTALL_MONGODB
		;;
	-dn | --docker_node)
		option_switch MODIFY_DOCKER_NODE
		;;
	-dr | --docker_react)
		option_switch MODIFY_DOCKER_REACT
		;;
	*)
		# unknown option
		echo "Invalid option: $key" 1>&2
		usage
		exit 1
		;;
	esac
done

# Check if no options are provided
FOUND_OPTION=false
for option in "${OPTIONS[@]}"; do
	if eval "((\$$option))"; then
		FOUND_OPTION=true
		break
	fi
done

if $INSTALL_DOCKER; then
	install_docker
fi

if $INSTALL_GO_LANG; then
	install_golang
fi

if $INSTALL_NODE; then
	install_nodejs
fi

if $INSTALL_NGINX; then
	clone_nginx
	pushd /project/nginx
	./start.sh
fi

if $INSTALL_MONGODB; then
	clone_mongodb
fi

if $MODIFY_DOCKER_NODE; then
	cp -r $MY_PATH/../data/docker/node/. ./
	current_path="$(basename $(pwd))"
	sed -i "s/project-name/$current_path/g" docker-compose.yml
fi

if $MODIFY_DOCKER_REACT; then
	cp -r $MY_PATH/../data/docker/react/. ./
	current_path="$(basename $(pwd))"
	sed -i "s/project-name/$current_path/g" docker-compose.yml
fi

# Final message
echo "Setup complete."
